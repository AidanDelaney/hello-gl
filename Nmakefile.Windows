hello-gl.exe: hello-gl.obj util.obj
	link /nologo /out:hello-gl.exe /SUBSYSTEM:console $^ opengl32.lib glut32.lib glew32.lib

hello-gl-dummy.exe: hello-gl-dummy.obj
	link /nologo /out:hello-gl-dummy.exe /SUBSYSTEM:console $^ opengl32.lib glut32.lib glew32.lib

.c.obj: hello-gl.c
	cl /nologo /Fo$@ /c $<

clean:
	del hello-gl.obj
	del util.obj
	del hello-gl-dummy.obj
	del hello-gl.exe
	del hello-gl-dummy.exe

